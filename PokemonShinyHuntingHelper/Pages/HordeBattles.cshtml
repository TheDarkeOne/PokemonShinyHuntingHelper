@page "/hunt/hordebattles"
@model PokemonShinyHuntingHelper.Pages.HordeBattlesModel
@{
}

<form method="post">
    <div>
        <div>
            <text>Encounters: </text>
            <input type="number" asp-for="CurrentHunt.Amount">
        </div>
        <div>
            <text>Pokemon Caught: </text>
            <input asp-for="CurrentHunt.Pokemon" placeholder="Pokemon">
        </div>
        <div>
            <text>Date and Time Started: </text>
            <input type="datetime-local" asp-for="CurrentHunt.Start" placeholder="Start">
        </div>
        <div>
            <text>Date and Time Finished: </text>
            <input type="datetime-local" asp-for="CurrentHunt.Finish" placeholder="Finish">
        </div>
        <div>
            <text>Shiny Charm?</text>
            <input type="checkbox" asp-for="CurrentHunt.ShinyCharm" />
        </div>
        <div>
            <text>Full Odds</text>
            <input type="text" readonly asp-for="BaseOdds" />
        </div>
        <div>
            <text>Odds With Shiny Charm</text>
            <input type="text" readonly asp-for="OddsWithShinyCharm">
        </div>
        <div>
            <input type="submit" />
        </div>
    </div>
</form>
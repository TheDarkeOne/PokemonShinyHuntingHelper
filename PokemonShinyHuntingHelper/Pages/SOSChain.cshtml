@page "/hunt/soschain"
@model PokemonShinyHuntingHelper.Pages.SOSChainModel
@{
}

<form method="post">
    <div>
        <div>
            <text>Chain Length: </text>
            <input type="number" asp-for="CurrentHunt.Chain">
        </div>
        <div>
            <text>Pokemon Caught: </text>
            <input asp-for="CurrentHunt.Pokemon" placeholder="Pokemon">
        </div>
        <div>
            <text>Date and Time Started: </text>
            <input asp-for="CurrentHunt.Start" placeholder="Pokemon">
        </div>
        <div>
            <text>Date and Time Finished: </text>
            <input asp-for="CurrentHunt.Finish" placeholder="Pokemon">
        </div>
        <div>
            <text>Shiny Charm?</text>
            <input type="checkbox" asp-for="CurrentHunt.ShinyCharm" />
        </div>
        <div>
            <text>Full Odds</text>
            <input type="text" readonly asp-for="BaseOdds" />
        </div>
        <div>
            <text>Odds With Shiny Charm</text>
            <input type="text" readonly asp-for="OddsWithShinyCharm">
        </div>
        <div>
            <text>Max Chain Odds</text>
            <input type="text" readonly asp-for="MaxChainOdds">
        </div>
        <div>
            <input type="submit" />
        </div>
    </div>
</form>